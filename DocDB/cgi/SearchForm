use CGI qw(-nosticky);                                                                                      
use DBI;

require "DocDBGlobals.pm";
require "FormElements.pm";
require "SearchFormElements.pm";
require "Scripts.pm";
require "Sorts.pm";
require "AuthorSQL.pm";
require "TopicSQL.pm";
require "SecuritySQL.pm";
require "MiscSQL.pm";
require "ResponseElements.pm";
require "HTMLUtilities.pm";
require "MeetingHTML.pm";

$query = new CGI;  # Global for subroutines
$dbh   = DBI->connect('DBI:mysql:'.$db_name.':'.$db_host,$db_rouser,$db_ropass);

GetAuthors();
GetTopics();
GetSecurityGroups();
GetJournals();
GetDocTypes();

%params = $query -> Vars;

print $query->header;
  
DocDBHeader("$Project Document Database Search","Document Database Search",
            -search => $TRUE, -scripts => ["PopUps","TopicChooser","EventChooser"]);


print "<h4>Click on any of the <span class=\"Help\">highlighted headings</span> for help.</h4>\n";

print "<table border=1 id=\"SearchFormTable\" class=\"UnPaddedTable CenteredTable\">\n";

print "<tr><td class=\"SubmitCell>\n";
print "<table class=\"HighPaddedTable\"><tr><td SearchFormCell\">\n";
print $query -> start_multipart_form('POST',$Search,"name=\"simplesearch\"");
print FormElementTitle(-helplink => "simplesearch", -nobreak => $TRUE,
                       -helptext => "Search",       -nocolon => $TRUE,);
print $query -> textfield(-size => 40, -name => "simpletext");
print $query -> hidden(-name => "simple", -default => '1');
print $query -> submit (-value => "Simple Search");     
print $query -> end_multipart_form;
print "</td></tr></table>\n";
print "</td></tr>\n";


print "<tr><td class=\"SearchFormCell\">\n";
print $query -> start_multipart_form('POST',$Search,"name=\"queryform\"");
print "<table class=\"HighPaddedTable\">\n";
print "<tr>\n";
 print "<td colspan=\"3\" class=\"SubmitCell\">\n"; 
 print $query -> submit (-value => "Advanced Search");     
 print "&nbsp;&nbsp;&nbsp;\n";
 print $query -> reset (-value => "Reset Search Form");     
 print "</td>\n";
print "</tr>\n";

print "<tr>\n";
 print "<td colspan=\"3\" class=\"SubmitCell\">\n";
 LogicTypeButtons(); 
 print "</td>\n";
print "</tr>\n";
print "<tr>\n";
 print "<td colspan=\"3\" class=\"SubmitCell\">\n";
 ModeSelect(); 
print "</td></tr>\n";

print "<tr>\n";
 print "<td colspan=\"3\">\n"; 

  print "<table class=\"LowPaddedTable LeftHeader\">\n";
   TitleSearchBox();    
   AbstractSearchBox();    
   KeywordsSearchBox();    
   RevisionNoteSearchBox();    
   PubInfoSearchBox();    
   FileNameSearchBox();    
   DescriptionSearchBox();
   if ($ContentSearch) {    
     ContentSearchBox();
   }      
  print "</table>\n";

 print "</td>\n";
#&ReferenceForm;  
print "</tr>\n";


 print "<tr>\n";
 
 print "<td>\n"; # Requester
 AuthorScroll(-helplink => "requestersearch", -helptext => "Submitter", 
              -name     => "requestersearch", -multiple => $TRUE);
 print "</td>\n"; 

 print "<td>\n"; # Authors
 AuthorScroll(-helplink => "author", -multiple => $TRUE);
 print "</td>\n";
 
 print "<td>\n";
 AuthorTextEntry();
 print "</td>\n";
 
 print "</tr>\n";
 
 print "<tr>\n";
 print "<td>\n"; DocTypeMulti();       print "</td>\n";
  print "<td colspan=\"2\">\n";
  print "<dl>\n";
  print "<dt>";
  print FormElementTitle(-helplink => "beforeafterdate", -helptext => "Last Modified Between");
  print "</dt><dd>\n";
  DateRangePullDown();
  print "</dd></dl>\n";
  print "</td>\n";
 print "</tr>\n";

 print "<tr>\n";
  MajorMinorSelect();
 print "</tr>\n";

 print "<tr>\n";
 print "<td>\n";
  EventGroupSelect(-multiple => $TRUE, -onchange => "selectEvent(this.form);");
 print "</td>\n";
 print "<td colspan=\"2\">\n";
  EventSelect(-multiple => $TRUE, -format => "full");
 print "</td>\n";
 print "</tr>\n";

 print "<tr>\n";
  print "<td colspan=\"3\" class=\"SubmitCell\">\n"; 
  print $query -> submit (-value => "Advanced Search");     
  print "&nbsp;&nbsp;&nbsp;\n";
  print $query -> reset (-value => "Reset Search Form");     
  print "</td>\n";
 print "</tr>\n";
print "</table>\n";
print $query -> end_multipart_form;

print "</td></tr></table>\n";


DocDBNavBar();
DocDBFooter($DBWebMasterEmail,$DBWebMasterName);

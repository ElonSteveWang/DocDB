use CGI qw(-nosticky);                                                                                      
use DBI;

require "DocDBGlobals.pm";
require "FormElements.pm";
require "SearchFormElements.pm";
require "Scripts.pm";
require "Sorts.pm";
require "AuthorSQL.pm";
require "TopicSQL.pm";
require "SecuritySQL.pm";
require "MiscSQL.pm";
require "ResponseElements.pm";
require "HTMLUtilities.pm";
require "MeetingHTML.pm";

$query = new CGI;  # Global for subroutines
$dbh   = DBI->connect('DBI:mysql:'.$db_name.':'.$db_host,$db_rouser,$db_ropass);

GetAuthors();
GetTopics();
GetSecurityGroups();
GetJournals();
GetDocTypes();

%params = $query -> Vars;

print $query->header;
  
DocDBHeader("$Project Document Database Search","Document Database Search",
            -search => $TRUE, -scripts => ["PopUps","TopicChooser","EventChooser"]);

print $query -> start_multipart_form('POST',$Search,"name=\"queryform\"");

print "<h4>Click on any of the <span class=\"Help\">highlighted headings</span> for help.</h4>\n";

print "<table id=\"SearchFormTable\" class=\"HighPaddedTable CenteredTable\">\n";
print "<tr>\n";
 print "<td colspan=\"3\" class=\"SubmitCell\">\n"; 
 print $query -> submit (-value => "Search for Documents");     
 print "&nbsp;&nbsp;&nbsp;\n";
 print $query -> reset (-value => "Reset Search Form");     
 print "</td>\n";
print "</tr>\n";

print "<tr>\n";
 print "<td colspan=\"3\" class=\"SubmitCell\">\n";
 LogicTypeButtons(); 
 print "</td>\n";
print "</tr>\n";
print "<tr>\n";
 print "<td colspan=\"3\" class=\"SubmitCell\">\n";
 ModeSelect(); 
print "</td></tr>\n";

print "<tr>\n";
 print "<td colspan=\"3\">\n"; 

  print "<table class=\"LowPaddedTable LeftHeader\">\n";
   TitleSearchBox();    
   AbstractSearchBox();    
   KeywordsSearchBox();    
   RevisionNoteSearchBox();    
   PubInfoSearchBox();    
   FileNameSearchBox();    
   DescriptionSearchBox();
   if ($ContentSearch) {    
     ContentSearchBox();
   }      
  print "</table>\n";

 print "</td>\n";
#&ReferenceForm;  
print "</tr>\n";


 print "<tr>\n";
 
 print "<td>\n"; # Requester
 AuthorScroll(-helplink => "requestersearch", -helptext => "Submitter", 
               -name     => "requestersearch", -multiple => "true");
 print "</td>\n"; 

 print "<td>\n"; # Authors
 AuthorScroll(-helplink => "author", -multiple => "true");
 print "</td>\n";
 
 print "<td>\n"; DocTypeMulti();       print "</td>\n";
 print "</tr>\n";
 
 print "<tr>\n";
  print "<td colspan=\"3\">\n";
  print "<dl>\n";
  print "<dt>";
  print FormElementTitle(-helplink => "beforeafterdate", -helptext => "Last Modified Between");
  print "</dt><dd>\n";
  DateRangePullDown();
  print "</dd></dl>\n";
  print "</td>\n";
 print "</tr>\n";

 print "<tr>\n";
  MajorMinorSelect();
 print "</tr>\n";

 print "<tr>\n";
 print "<td>\n";
  EventGroupSelect(-multiple => $TRUE, -onchange => "selectEvent(this.form);");
 print "</td>\n";
 print "<td colspan=\"2\">\n";
  EventSelect(-multiple => $TRUE, -format => "full");
 print "</td>\n";
 print "</tr>\n";

 print "<tr>\n";
  print "<td colspan=\"3\" class=\"SubmitCell\">\n"; 
  print $query -> submit (-value => "Search for Documents");     
  print "&nbsp;&nbsp;&nbsp;\n";
  print $query -> reset (-value => "Reset Search Form");     
  print "</td>\n";
 print "</tr>\n";

print "</table>\n";

print $query -> end_multipart_form;

DocDBNavBar();
DocDBFooter($DBWebMasterEmail,$DBWebMasterName);

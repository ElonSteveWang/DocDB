use CGI qw(-nosticky);                                                                                      
use DBI;

require "DocDBGlobals.pm";
require "DBUtilities.pm";
require "HTMLUtilities.pm";
require "XSearch.pm";

$query = new CGI;  # Global for subroutines

%params = $query -> Vars;

my $SearchText       = $params{searchtext};

CreateConnection(-type => "ro");

print $query->header;
DocDBHeader("DocDB X-Search"); 

my @Projects = ("FOCUS");

my %Documents = ();

foreach my $Project (@Projects) {
  my %ProjectDocuments = XSearchURL( {-project => $Project, -text => $SearchText } );

  foreach my $Identifier (keys %ProjectDocuments) {
    $Documents{$Identifier} = \%{ $ProjectDocuments{$Identifier} };
  }
}

# sort

# Print document table 

foreach my $Identifier (keys %Documents) {
  print "$Identifier<br/>\n";
}


DocDBNavBar();
DocDBFooter($DBWebMasterEmail,$DBWebMasterName);

use Benchmark;
use CGI;
use DBI;

$StartTime = new Benchmark;

require "DocDBGlobals.pm";
require "Messages.pm";

require "CertificateUtilities.pm";



$query = new CGI;  # Global for subroutines

%params = $query -> Vars;

$dbh   = DBI->connect('DBI:mysql:'.$db_name.':'.$db_host,$db_rouser,$db_ropass);

### Start HTML

print $query->header;
&DocDBHeader("Certificate Status and Application");

&EndPage(@ErrorStack);

### Output Information
my $CertificateStatus = &CertificateStatus();

if ($CertificateStatus eq "verified") {
  print "Your certificate has been verified and you have access to documents from these groups:";
  my @GroupIDs = &FetchSecurityGroupsByCert();
  print "<ul>\n";
  if (@GroupIDS) {
    foreach my $GroupID (@GroupIDs) {
      &FetchSecurityGroup($GroupID);
      print "<li>",$SecurityGroups{$GroupID}{NAME},"</li>\n";
    }
  } else {
    print "<li>None: Contact an adminstrator if this is incorrect</li>\n";
  }       
  print "</ul>\n";
} elsif ($CertificateStatus eq "unverified") {  
  print "Your certificate has been verified and you have applied for access to documents. 
         If you believe your request has been misplaced or neglected, contact an administator.";
} elsif ($CertificateStatus eq "mismatch") {  
  print "Your certificate is valid but a similar certificate already exists for 
         either your e-mail address or your name (CN). Only one certificate is allowed
         per person. Contact an administrator if you don't know what to do.";
} elsif ($CertificateStatus eq "nocert") {  
  print "You didn't present a certificate. Not sure if this can happen.";
} elsif ($CertificateStatus eq "noapp") {
  print "Your certificate is valid but you have never applied for access to documents. Fill out the form below to apply for access.";

}
&DocDBNavBar();
&DocDBFooter($DBWebMasterEmail,$DBWebMasterName);

use Benchmark;
use CGI;
use DBI;

$StartTime = new Benchmark;

require "DocDBGlobals.pm";
require "Messages.pm";
require "HTMLUtilities.pm";
require "ResponseElements.pm";
require "Scripts.pm";

require "CertificateUtilities.pm";

require "Debug.pm"; # REMOVE

$query = new CGI;  # Global for subroutines

%params = $query -> Vars;

$dbh   = DBI->connect('DBI:mysql:'.$db_name.':'.$db_host,$db_rouser,$db_ropass);

### Start HTML

print $query->header;
&HelpPopupScript;

&DocDBHeader("Certificate Status and Application");

&EndPage(@ErrorStack);

### Output Information
my $CertificateStatus = &CertificateStatus();
my $CertEmail = $ENV{SSL_CLIENT_S_DN_Email};
my $CertCN    = $ENV{SSL_CLIENT_S_DN_CN};

print "ST $CertificateStatus<br>\n";

if ($CertificateStatus eq "verified") {
  print "<b>Your certificate has been verified and you have access to documents from these groups:</b>";
  my @GroupIDs = &FetchSecurityGroupsByCert();
  print "<ul>\n";
  if (@GroupIDS) {
    foreach my $GroupID (@GroupIDs) {
      &FetchSecurityGroup($GroupID);
      print "<li>",$SecurityGroups{$GroupID}{NAME},"</li>\n";
    }
  } else {
    print "<li>None: Contact an adminstrator if this is incorrect</li>\n";
  }       
  print "</ul>\n";
} elsif ($CertificateStatus eq "unverified") {  
  print "<b>Your certificate is valid and you have applied for access to documents. 
         If you believe your request has been misplaced or neglected, contact an administator.</b>";
  print "The following information may be helpful:<br>\n";
  print "<b>Certificate Common Name (CN):</b> $CertCN<br>\n";
  print "<b>Certificate E-mail Address:</b> $CertEmail<br>\n";
} elsif ($CertificateStatus eq "mismatch") {  
  print "<b>Your certificate is valid but a similar certificate already exists
         for  either your e-mail address or your name (CN). Only one
         certificate is allowed per person. Contact an administrator if you
         don't know what to do.</b>";
  print "The following information may be helpful:<br>\n";
  print "<b>Certificate Common Name (CN):</b> $CertCN<br>\n";
  print "<b>Certificate E-mail Address:</b> $CertEmail<br>\n";
} elsif ($CertificateStatus eq "nocert") {  
  print "<b>You didn't present a certificate. Not sure if this can happen.</b>";
} elsif ($CertificateStatus eq "noapp") {
  require "SecurityHTML.pm";
  require "FormElements.pm";
  print "<b>Your certificate is valid but you have never applied for access to
         documents.<br/>Fill out the form below to apply for access.</b><p>";
  print "<center>\n";
  print $query -> start_multipart_form('POST',$$UserAccessApply);
  print "<table cellpadding=5>\n";
  print "<tr>\n";
  print "<td valign=top><b>Your name (Certificate CN):</b><br>&nbsp;&nbsp;$CertCN<p/>\n";
  print "<b>Your e-mail:</b><br>&nbsp;&nbsp;$CertEmail\n";
  print "</td>\n";
  print "<td>\n";
  &SecurityList(-helplink => "reqgroups", -helptext => "Requested<br>Groups",
                -name => "reqgroups");
  print "</td></tr>\n";
  print "<tr>\n";
  print "</td></tr>\n";
  print "<tr><td colspan=2>\n";
  &TextEntryBox(-helplink => "certnote", -helptext => "Notes", 
                -extratext => "(Identify yourself or other notes if needed.)",
                -name => "certnote");    
  print "</td></tr>";
  print "<tr><td colspan=2 align=center>\n";
  print $query -> submit (-value => "Apply for access");
  print "</td></tr>";
  print "</table>\n";       
  print "</center>\n";
}

&DocDBNavBar();
&DocDBFooter($DBWebMasterEmail,$DBWebMasterName);
